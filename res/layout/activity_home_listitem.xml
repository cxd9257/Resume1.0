<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/home_btn_selector">
    
<!--     <LinearLayout  -->
<!--         android:id="@+id/home_listitem_linlay" -->
<!-- 	    android:layout_width="match_parent" -->
<!-- 	    android:layout_height="wrap_content"  -->
<!-- 	    android:visibility="visible" -->
<!--         > -->
    <TextView
	    android:id="@+id/home_listitem_title"
	    android:layout_width="match_parent"
	    android:layout_height="23dp" 
	    android:background="@drawable/head3"
	    android:clickable="false"
	    android:gravity="left" 
	    android:text="@string/app_name"
	    android:textSize="16sp"
	    android:textColor="@android:color/white"
	    android:visibility="gone"/>
    
    <ImageView 
	    android:id="@+id/home_listitem_line"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:contentDescription="@string/app_name"
	    android:layout_below="@+id/home_listitem_title"
	    android:scaleType="fitXY"
	    android:src="@drawable/black_hrz_line"
	    android:visibility="gone"/>
    
<!--     </LinearLayout> -->
        

    <ImageView
        android:id="@+id/home_listitem_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/app_name"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:layout_below="@+id/home_listitem_line"
        android:src="@drawable/img_baseinfo" />

      <TextView
        android:id="@+id/home_listitem_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@+id/home_listitem_img"
        android:layout_below="@+id/home_listitem_line"
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:text="@string/app_name"
        />

</RelativeLayout>